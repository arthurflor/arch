### packages ###
sudo zypper in cmake extra-cmake-modules xf86-input-synaptics pulseaudio-module-gconf
sudo zypper in git wget rar fetchmsttfonts latte-dock imagewriter keepassxc filelight
sudo zypper in vlc qbittorrent kamoso kdenlive inkscape audacity clementine
sudo zypper in steam libXtst6-32bit libvdpau1-32bit libvdpau_va_gl1-32bit libva-glx2-32bit


### development ###
sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc
sudo sh -c 'echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\ntype=rpm-md\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" > /etc/zypp/repos.d/vscode.repo'

sudo zypper refresh
sudo zypper in nodejs8 npm8 code

sudo npm install -g nodemon typescript typescript-formatter cordova ionic @angular/cli


### nvidia driver ###
sudo zypper ar -c -f http://download.opensuse.org/repositories/X11:/Bumblebee/openSUSE_Tumbleweed/ X11:Bumblebee
sudo zypper in bumblebee nvidia-bumblebee nvidia-bumblebee-32bit
sudo systemctl enable dkms
sudo mkinitrd
sudo systemctl enable bumblebeed

sudo gpasswd -a <USER> bumblebee
sudo gpasswd -a <USER> video


### install by browser ###
Google Chrome

Smartgit:
    1. tar -xvf smartgit-linux-*.tar.gz
    2. sudo mv smartgit /opt
    3. sudo ln -s /opt/smartgit/bin/smartgit.sh /usr/bin/smartgit
    4. sudo nano /usr/share/applications/smartgit.desktop

[Desktop Entry]
Type=Application
Name=SmartGit
Icon=/opt/smartgit/bin/smartgit-128.png
Exec="/opt/smartgit/bin/smartgit.sh" %f
Categories=Development;IDE;
Terminal=false

    5. smartgit

Android Studio:
    1. unzip android-studio-ide-*-linux.zip
    2. sudo mv android-studio /opt
    3. sudo mkdir -p /opt/android-sdk/tools/bin/sdkmanager 
    4. sudo chown <USER>:users -R /opt/android-sdk
    5. sudo ln -s /opt/android-studio/bin/studio.sh /usr/bin/android-studio
    6. sudo nano /usr/share/applications/android-studio.desktop
    
[Desktop Entry]
Type=Application
Name=Android Studio
Icon=/opt/android-studio/bin/studio.png
Exec="/opt/android-studio/bin/studio.sh" %f
Categories=Development;IDE;
Terminal=false
    
    7. android-studio

Java Development Kit:
    1. tar xvzf jdk-*.tar.gz
    2. mv jdk*/ jdk-oracle
    3. sudo mv jdk-oracle/ /usr/lib
    4. sudo update-alternatives --install "/usr/bin/java" "java" "/usr/lib/jdk-oracle/bin/java" 3
    5. sudo update-alternatives --install "/usr/bin/javac" "javac" "/usr/lib/jdk-oracle/bin/javac" 3
    6. sudo update-alternatives --install "/usr/bin/jar" "jar" "/usr/lib/jdk-oracle/bin/jar" 3
    7. sudo update-alternatives --install "/usr/bin/javaws" "javaws" "/usr/lib/jdk-oracle/bin/javaws" 3
    8. sudo update-alternatives --set java /usr/lib/jdk-oracle/bin/java
    9. sudo update-alternatives --set javac /usr/lib/jdk-oracle/bin/javac
    10. sudo update-alternatives --set jar /usr/lib/jdk-oracle/bin/jar
    11. sudo update-alternatives --set javaws /usr/lib/jdk-oracle/bin/javaws
    12. sudo nano /etc/profile
    
ANDROID_HOME=/opt/android-sdk
JAVA_HOME=/usr/lib/jdk-oracle
PATH=$PATH:$HOME/bin:$JAVA_HOME/bin

export ANDROID_HOME
export JAVA_HOME
export PATH

    13. su -c 'source /etc/profile'
    14. sudo reboot
    15. $ANDROID_HOME/tools/bin/sdkmanager --licenses

    
### tips ###
--> optirun -b none nvidia-settings -c :8
--> Steam (nvidia): LD_PRELOAD='/usr/lib/nvidia/libGL.so' optirun %command%
--> Java runtime parameters: -Xms8192m -Xmx8192m


